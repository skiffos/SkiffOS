# use skiff-init-squashfs
# only 1GB available mem: do not load into RAM
BR2_PACKAGE_SKIFF_INIT_RESIZE2FS=y
BR2_PACKAGE_SKIFF_INIT_SQUASHFS=y
# BR2_PACKAGE_SKIFF_INIT_SQUASHFS_ROOT_AS_PERSIST is not set
# BR2_PACKAGE_SKIFF_INIT_SQUASHFS_ROOT_AS_BOOT is not set
BR2_PACKAGE_SKIFF_INIT_SQUASHFS_MOUNT_BOOT="/dev/mmcblk0p1"
BR2_PACKAGE_SKIFF_INIT_SQUASHFS_MOUNT_BOOT_FSTYPE="vfat"
BR2_PACKAGE_SKIFF_INIT_SQUASHFS_WAIT_EXISTS="/dev/mmcblk0p1"
BR2_PACKAGE_SKIFF_INIT_SQUASHFS_PATH="/mnt/boot/rootfs.squashfs"

# BR2_TARGET_ROOTFS_CPIO is not set
BR2_TARGET_ROOTFS_SQUASHFS=y
BR2_TARGET_ROOTFS_SQUASHFS4_LZ4=y
